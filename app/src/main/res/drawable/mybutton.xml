<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#32B1D2" />
            <gradient android:angle="-90" android:endColor="#32B1D2" android:startColor="#32B1D2" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#FFCB04" />
            <solid android:color="#FFCB04" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="#FFCB04" />
            <gradient android:angle="-90" android:endColor="#FFCB04" android:startColor="#FFCB04" />
        </shape>
    </item>
</selector>