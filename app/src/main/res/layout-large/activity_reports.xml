<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">


    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context="tutorsweb.ehc.com.tutorsinfogathering.ReportsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/marketing_executive_id"
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tutor_progress_bar"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:text="ID : "
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reports_for"
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tutor_progress_bar"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:text="Reports For : "
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="12dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/tutor_progress_title"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tutor_progress_bar"
            android:layout_centerVertical="true"
            android:text="Tutor Signup"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/tutor_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_shape"
                android:indeterminate="false"
                android:progressDrawable="@drawable/circular_progress_bar" />

            <TextView
                android:id="@+id/tutor_progress_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="0"
                android:textSize="32sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tutor_target"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tutor_progress_bar"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Target :"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/institute_progress_title"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/institute_progress_bar"
            android:layout_centerVertical="true"
            android:text="Institute Signup"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/institute_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_shape"
                android:indeterminate="false"
                android:progressDrawable="@drawable/circular_progress_bar" />

            <TextView
                android:id="@+id/institute_progress_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="0"
                android:textSize="32sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/institute_target"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tutor_progress_bar"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Target :"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/lead_progress_title"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/lead_progress_bar"
            android:layout_centerVertical="true"
            android:text="Lead Capture"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/lead_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_shape"
                android:indeterminate="false"
                android:progressDrawable="@drawable/circular_progress_bar" />

            <TextView
                android:id="@+id/lead_progress_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="0"
                android:textSize="32sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/lead_target"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tutor_progress_bar"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Target :"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>

